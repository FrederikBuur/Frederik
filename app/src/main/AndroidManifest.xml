<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.buur.frederikapp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:launchMode="singleTop"
        android:theme="@style/SplashTheme"
        android:name=".controllers.FredApplication">
        <activity android:name=".activities.startup.StartUpActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="soudfa" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.main.MainActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|adjustPan"/>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="290ec3ed5b8a32226a6672062c4b8cee9288887e" />
    </application>

</manifest>