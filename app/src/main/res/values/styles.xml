<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonPrimary" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/background_button_primary</item>
        <item name="android:paddingStart">@dimen/padding_24</item>
        <item name="android:paddingEnd">@dimen/padding_24</item>
    </style>

</resources>
